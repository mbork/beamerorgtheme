% Title page: default

\defbeamertemplate*{title page}{org}[1][]
{%
  {\setbox\@tempboxa=\hbox{\usebeamerfont{org keywords}-}\global\dimen@i=\wd\@tempboxa}%
  \leftskip=13\dimen@i
  \leavevmode
  \llap{\usebeamerfont{org keywords}\usebeamercolor[fg]{org keywords dimmed}\#+TITLE:~~~~~}%
  {\usebeamerfont{title}\inserttitle\par}%
  \ifx\insertsubtitle\@empty%
  \else%
%    \vskip0.25em%
  \leavevmode
  \llap{\usebeamerfont{org keywords}\usebeamercolor[fg]{org keywords dimmed}\#+SUBTITLE:~~}%
  {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
  \fi%     
  \vskip1em\par
  \leavevmode
  \llap{\usebeamerfont{org keywords}\usebeamercolor[fg]{org keywords dimmed}\#+AUTHOR:~~~~}%
  {\usebeamerfont{author}\insertauthor}%
  \par
  \leavevmode
  \llap{\usebeamerfont{org keywords}\usebeamercolor[fg]{org keywords dimmed}\#+INSTITUTE:~}%
  {\usebeamerfont{institute}\insertinstitute}%
  \par
  \leavevmode
  \llap{\usebeamerfont{org keywords}\usebeamercolor[fg]{org keywords dimmed}\#+DATE:~~~~~~}%
  {\usebeamerfont{date}\insertdate}%
  \par
  {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
}


